        <input_meta>{"name":"Input","type":"DATA_OBJECT","properties":[{"name":"resilientIncidentID","type":"STRING","mandatory":true},{"name":"servicenowTable","type":"STRING","mandatory":true},{"name":"servicenowSysID","type":"STRING","mandatory":true},{"name":"mappingScriptNumber","type":"STRING","mandatory":true}]}</input_meta>
